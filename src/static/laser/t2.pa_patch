    "destination" : "/mod/com.pa.domdom.laser_unit_effects/laser/t2_muzzle_flash.pfx",
    "patch" : [
        {"op" : "replace", "path" : "/emitters/0/spec/red",     "value" : [[0.3, 2.0], [1, 1.00]]},
