      {"op": "add", "path": "/events", "value": 
        {
          "died": {
            "audio_cue": "/SE/Impacts/laser_blast",
            "effect_spec": "/mod/com.pa.domdom.laser_unit_effects/laser/t2_ammo_hit.pfx"
