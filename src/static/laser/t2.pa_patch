            "red": 1.0,
            "green": 0.2,
            "blue": 0.1,
            "size" : [[0, 1], [0.5, 0]],
            "alpha": 1,
            "baseTexture": "/pa/effects/textures/particles/flat.papa",
            "dataChannelFormat": "PositionColorAndAlignVector"
