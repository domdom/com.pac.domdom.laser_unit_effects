        {"op" : "replace", "path" : "/events/fired/effect_spec", "value" : "/mod/com.pa.domdom.laser_unit_effects/laser/t2_muzzle_flash.pfx socket_leftMuzzle /mod/com.pa.domdom.laser_unit_effects/laser/t2_muzzle_flash.pfx socket_rightMuzzle"}
